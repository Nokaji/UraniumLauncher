<html lang="fr" xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="utf-8" http-equiv="Content-Security-Policy" content="script-src 'self'"/>
        <title>Uranium Launcher</title>

        <link type="text/css" rel="stylesheet" href="./assets/css/fonts.css">
        <link rel="stylesheet" href="./assets/fontawesome/css/all.css">

        <link rel="stylesheet" href="./assets/css/iziToast.css">
        
        <link type="text/css" rel="stylesheet" href="./assets/css/bootstrap.css">

        <link type="text/css" rel="stylesheet" href="./assets/css/frame.css">
        <link type="text/css" rel="stylesheet" href="./assets/css/launcher.css">
        <link type="text/css" rel="stylesheet" href="./assets/css/overlay.css">
        <link rel="stylesheet" type="text/css" href="./assets/css/settings.css">

        <link rel="stylesheet" href="./assets/css/login.css">

        <script src="./assets/js/autoupdater.js"></script>
        <script src="./assets/js/scripts/swinger.js"></script>
        <script src="./assets/js/scripts/swinginterface.js"></script>
    </head>
    <body>
        <div id="main">
            <!-- Launcher Panel -->
            <% include launcher.ejs %>

            <!-- Login Panel -->
            <% include login.ejs %>

            <!-- LoginMojangAuth -->
            <% include login/loginmojang.ejs %>

            <!-- LoginMicrosoftAuth -->
            <% include login/loginmicrosoft.ejs %>
            
            <!-- Settings Panel -->
            <% include settings.ejs %>
        </div>
        
        <!-- Frame Bar -->
        <% include frame.ejs %>
        <!-- Overlay PopUp -->
        <% include overlay.ejs %>
        <div id="loading-view" style="display: none;">
            <div class="loading-container">
                <img src="./assets/images/icons/icon.png" class="uranium-loader"></img>
                <div class="loading-text">
                    <p id="loading-splash-text"></p>
                    <p id="loading-statut-text">Chargement en cours</p>
                </div>
            </div>
        </div>
    </body>
</html>
